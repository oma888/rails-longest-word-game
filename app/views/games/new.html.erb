<h1>******** Welcome to the longest word-game! *********</h1>

<h2>Here is your grid:</h2>

<p><%= @letters%></p>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text"    name="myword"    placeholder="Enter your word please!">
  <input type="hidden"  name="mygrid"    value="<%= @my_grid %>">
  <input type="hidden"  name="startime"  value="<%= @start_time %>">
  <input type="submit">
</form>
